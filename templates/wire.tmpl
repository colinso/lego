//go:build wireinject
// +build wireinject

package wire

import (
	"{{.Name}}/internal/api"
	"{{.Name}}/internal/config"
	"{{.Name}}/internal/handlers"
	{{ if IsNotEmpty .Services }}"{{.Name}}/internal/services"{{end}}
	{{with .Database.Name}}"{{.}}/internal/db"{{end}}

	"github.com/google/wire"
)

func ConfigureServer() *api.Server {
	wire.Build(
		config.NewConfig,
		api.NewServer,
		api.NewRouter,
		{{with .Database.Name}}db.NewDBConnection,{{end}}

		handlers.Component,
		{{ if IsNotEmpty .Services }}services.Component,{{end}}
	)
	return &api.Server{}
}